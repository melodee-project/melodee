@using Melodee.Common.Models.Collection
@using Melodee.Common.Models.Collection.Extensions
<RadzenCard Variant="Variant.Filled" class="@($"rz-mx-auto rz-my-2 rz-p-2 {CssClass}")" Style="max-width: 300px">
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" Gap="5px" class="rz-p-1">
        <RadzenImage Path="@Artist.ImageUrl()" Style="width: 50px; height: 50px; border-radius: 50%;"/>
        <RadzenStack Gap="0">
            <RadzenText TextStyle="TextStyle.Body1">
                <RadzenLink text="@Artist.Name"  class="rz-text-wrap" href="@Artist.DetailUrl()" />
            </RadzenText>
            <RadzenText TextStyle="TextStyle.Overline"
                        class="rz-display-flex rz-mt-4 rz-mb-0">@ArtistDataInfo.InfoLineTitle</RadzenText>
            <RadzenText TextStyle="TextStyle.Body1">@Artist.InfoLineData</RadzenText>
        </RadzenStack>
    </RadzenStack>
</RadzenCard>

@code {
    [Parameter] public ArtistDataInfo Artist { get; set; } = null!;
    [Parameter] public string CssClass { get; set; } = string.Empty;
}
