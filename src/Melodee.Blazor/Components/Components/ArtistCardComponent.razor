<RadzenCard Variant="Variant.Filled" class="rz-mx-auto rz-my-2 rz-p-2" Style="max-width: 300px">
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" Gap="5px" class="rz-p-1">
        <RadzenImage Path="@Artist.ImageBase64" Style="width: 50px; height: 50px; border-radius: 50%;" />
        <RadzenStack Gap="0">
            <RadzenText TextStyle="TextStyle.Body1">@(Artist.Name)</RadzenText>
            <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex rz-mt-4 rz-mb-0">@Artist.InfoLineTitle</RadzenText>
            <RadzenText TextStyle="TextStyle.Body1">@Artist.InfoLineData</RadzenText>
        </RadzenStack>
    </RadzenStack>
</RadzenCard>

@code {
    [Parameter] public Melodee.Common.Models.Cards.ArtistCard Artist { get; set; } = null!;
}
